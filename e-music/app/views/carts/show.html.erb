<div class="keep-shopping-pv1 mt4 has-text-right">
  <%= link_to  "Keep Shopping", instrument_path, class: "button is-warning" %>
</div>
<hr/>
<section class="section">
  <%= render(@cart.line_items) %>
  <div class="columns">
    <div class="column">
      <%= button_to 'Empty Cart', @cart, method: :delete, data: {corfirm: "Are you sure?"}, class: "button is-danger"%>
    </div>
    <div class="column total has-text-right">
      <h4 class="title is-2">
        <span class="f5 has-text-grey">Total: <%= number_to_currency(@cart.total_price) %></span></h4>
    </div>
  </div>
</section>
