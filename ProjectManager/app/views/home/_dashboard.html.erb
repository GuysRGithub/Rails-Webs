<section class="section pt3">
  <p class="title is-5 border-bottom pb3 has-text-centered">
    Welcome <%= current_user.name %></p>
  <div class="columns">
    <div class="column border-right ph4">
      <div class="level">
        <div class="level-left">
          <h3 class="subtitle is-5">My Projects <span class="tag is-rounded"><%= @projects.count %></span></h3>
        </div>
        <div class="level-right">
          <p class="field">
            <%= link_to  "New Project", new_project_path, class: "button is-small" do %>
              <span class="icon is-small has-text-link">
                <i class="fa fa-plus"></i></span>
            <% end %>
          </p>
        </div>
      </div>
      <hr>
      <%# #####################################################   %>
      <% @projects.each do |project| %>
        <div class="content border-bottom pb4">
          <p class="title is-4">
            <%= link_to project.name, project %>
          </p>
          <p class="subtitle is-6">
            <%= link_to  "Project Team Name", new_team_path %>
          </p>
          <p class="f6">Created by <%= project.user.name %></p>
        </div>
      <% end %>
    </div>
    <%# #####################################################   %>
    <div class="column border-right ph4">
      <div class="level">
        <div class="level-left">
          <h3 class="subtitle is-5">My Teams <span class="tag is-rounded"><%= @teams.count %></span></h3>
        </div>
        <div class="level-right">
          <p class="field">
            <%= link_to  "New Team", new_team_path, class: "button is-small" do %>
              <span class="icon is-small has-text-link">
                <i class="fa fa-plus"></i></span>
            <% end %>
          </p>
        </div>
      </div>
      <hr>
      <% @teams.each do |team| %>
        <div class="content border-bottom pb4">
          <p class="title is-4">
            <%= link_to team.name, team %>
          </p>
          <p class="subtitle is-6">Members 
            <span class="f6"><%= safe_join(team.users.map{|user| user.name}, ', ') %></span>
          </p>
        </div>
      <% end %>
      <%# #####################################################   %>
    </div>
    <div class="column ph4">
      <h3 class="subtitle is-5">Activity</h3>
      <hr />
      <ul class="list">
        <%= render_activities(@activities) %>
      </ul>
    </div>
  </div>
</section>
