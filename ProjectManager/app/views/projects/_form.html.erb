<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <% if !current_user.id.blank? %>
    <div class="field">
      <div class="control">
        <%= f.input :name, input_html: {class: "input"}, wrapper: false,
      label_html: {class: "label"} %>
      </div>
    </div>
    <%#  %>
    <div class="field">
      <div class="control">
        <%= f.input :description, input_html: {class: "textare"}, wrapper: false,
      label_html: {class: "label"} %>
      </div>
    </div>
    <%#  %>
    <div class="field">
      <div class="control"><label class="label">Team</label>
        <div class="control has-icon-left">
          <span class="select">
            <%= f.input_field :team_id, collection: @teams, prompt: "Select A Team" %>
          </span>
          <span class="icon is-small is-left">
            <i class="fa fa-users"></i>
          </span>
        </div>
      </div>
    </div>
    <%= f.submit, class: "button is-link" %>
  <% else %>
    <article class="message is-warning">
      <div class="message-body">
        <strong>It looks like you are not a part of team.</strong>
        <p>Create a team or get invite by another user</p>
      </div>
    </article>
  <% end %>
<% end %>
