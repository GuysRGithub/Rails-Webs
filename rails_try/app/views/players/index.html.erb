<%= content_for :title do %>
  Ruby Web App  
<% end %>
<h1>Hello Everyone Today I fell in love</h1>
<h1>There are <%=h pluralize(@players.length, "Player")%></h1>
<table>
  <thead>
    <tr>
      <td>First name</td>
      <td>Last Name</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%=h player.first_name %></td>
        <td><%=h player.last_name %></td>
        <td>
          <%= link_to 'Show Profile', player_path(player.id) %>
          <%= link_to 'Edit Profile', edit_player_path(player.id) %>
          <%= link_to "Delete Profile", player_path(player.id), data: { confirm: 'Are you sure?', method: :delete} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Player', new_player_path %>
