<% if flash[:errors] %>
  <div class="danger">
    <% flash[:errors].each do |err| %>
      <p><%=h err %></p>
    <% end %>
  </div>
<% end %>
<h1>Login Page</h1>
<div class="row">
  <div id="registration" class="col-md-6">
    <h1>Registration</h1>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Username' %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.text_field :password %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'ConfirmPassword' %>
        <%= f.text_field :password_confirmation %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
  <div id="login" class="col-md-6">
    <h1>Login</h1>
  </div>
</div>
